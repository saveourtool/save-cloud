<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.cqfn.save.orchestrator.controller.HeartbeatController" level="DEBUG"/>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>