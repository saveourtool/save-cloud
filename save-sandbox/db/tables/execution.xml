<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="execution-1" author="frolov" context="dev or prod">
        <createTable tableName="execution">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="timestamp">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_lnk_user_organization_user" references="save_cloud.user(id)" nullable="false"/>
            </column>
            <column name="sdk" type="varchar(255)" defaultValue="ubuntu:latest">
                <constraints nullable="false" />
            </column>
            <column name="additional_files" type="text" defaultValue="null"/>
            <column name="fail_reason" type="text" defaultValue="null"/>
            <column name="initialized" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="modify-data-type-3" author="frolov">
        <modifyDataType tableName="execution" columnName="start_time" newDataType="DATETIME(3)"/>
        <modifyDataType tableName="execution" columnName="end_time" newDataType="DATETIME(3)"/>
    </changeSet>

    <changeSet id="add-save-cli-version" author="nulls">
        <addColumn tableName="execution">
            <column name="save_cli_version" type="varchar(100)" defaultValue="N/A">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="fix-link-to-users" author="nulls">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="save_cloud.old_user"/>
        </preConditions>
        <delete tableName="execution"/>
        <dropColumn tableName="execution" columnName="user_id"/>
        <addColumn tableName="execution">
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_execution_user" references="save_cloud.user(id)" nullable="false"/>
            </column>
        </addColumn>
        <dropTable tableName="old_user" schemaName="save_cloud"/>
    </changeSet>

</databaseChangeLog>