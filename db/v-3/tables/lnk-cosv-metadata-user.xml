<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="lnk-cosv-metadata-user-1" author="nulls">
        <createTable tableName="lnk_cosv_metadata_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cosv_metadata_id" type="bigint">
                <constraints foreignKeyName="fk_cosv_metadata_user_cosv_metadata" references="cosv_metadata(id)"
                             nullable="false" deleteCascade="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_lnk_cosv_metadata_user_user" references="user(id)" nullable="false"
                             deleteCascade="true"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="lnk_cosv_metadata_user" columnNames="user_id, cosv_metadata_id"/>
    </changeSet>

</databaseChangeLog>