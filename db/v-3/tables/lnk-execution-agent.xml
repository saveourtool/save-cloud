<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="v3-lnk-execution-agent-1" author="nulls">
        <createTable tableName="lnk_execution_agent">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="execution_id" type="bigint">
                <constraints foreignKeyName="fk_lnk_execution_agent_execution" references="execution(id)"
                             nullable="false" deleteCascade="true"/>
            </column>
            <column name="agent_id" type="bigint">
                <constraints foreignKeyName="fk_lnk_execution_agent_agent" references="agent(id)" nullable="false"
                             deleteCascade="true"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="lnk_execution_agent" columnNames="execution_id, agent_id"
                             constraintName="uq_lnk_execution_agent"/>
        <addUniqueConstraint tableName="lnk_execution_agent" columnNames="agent_id"
                             constraintName="lnk_execution_agent_agent_id"/>
    </changeSet>

</databaseChangeLog>
